@model List<Employee>

<h2 class="text-center">Employee List</h2>
<a asp-asp-controller="Employee" asp-action="Create" class="btn btn-primary" style="float:right">New Employee</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>#</th>
            <th>FirstName</th>
            <th>LastName</th>
            <th>Title</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.Count; i++)
        {
            <tr>
                <th>@(i + 1)</th>
                <td>@Model[i].FirstName</td>
                <td>@Model[i].LastName</td>
                <td>@Model[i].Title</td>
                <td>
                    <a class="btn btn-secondary" asp-action="OrderList" asp-controller="Order" asp-route-id="@Model[i].EmployeeId">Orders</a>
                </td>
            </tr>
        }
    </tbody>
</table>


