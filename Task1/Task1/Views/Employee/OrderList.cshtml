@model List<OrderListViewModel>

<h2 class="text-center">Order List</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>#</th>
            <th>Order ID</th>
            <th>Order Date</th>
            <th>Shipped Country</th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.Count; i++)
        {
            <tr>
                <th>@(i+1)</th>
                <td>@Model[i].OrderID</td>
                <td>@Model[i].OrderDate</td>
                <td>@Model[i].ShipCountry</td>
            </tr>
        }
    </tbody>
</table>