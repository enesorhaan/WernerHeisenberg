@using X.PagedList;
@using X.PagedList.Mvc.Core;
@using X.PagedList.Mvc.Common;

@*@model List<OrderListViewModel>*@

@model IPagedList<OrderListViewModel>

<link rel="stylesheet" href="/css/PagedList.css" />

<h2 class="text-center">Order List</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>#</th>
            <th>Order ID</th>
            <th>Order Date</th>
            <th>Shipped Country</th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.Count; i++)
        {
            <tr>
                <th>@(i+1)</th>
                <td>@Model[i].OrderID</td>
                <td>@Model[i].OrderDate</td>
                <td>@Model[i].ShipCountry</td>
            </tr>
        }
    </tbody>
</table>

<br />

@Html.PagedListPager(Model, 
    page => Url.Action("OrderList",new { page }),
    new PagedListRenderOptions() { DisplayLinkToFirstPage = PagedListDisplayMode.Always}
    )